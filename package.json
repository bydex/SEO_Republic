    "dependencies": {
        "@babel/plugin-transform-object-assign": "^7.8.3",
        "animate.css": "^4.1.0",
        "babel-plugin-transform-object-assign": "^6.22.0",
        "before-after": "^2.0.4",
        "before-after.js": "^1.0.1",
        "bemto.pug": "^2.1.0",
        "core-js": "2",
        "easytimer": "^1.1.1",
        "imaskjs": "^1.1.1",
        "input-masking": "^1.0.4",
        "jquery": "^3.5.0",
        "jquery-input-mask-phone-number": "^1.0.11",
        "jquery.event.move": "^1.3.6",
        "maskerjs": "^1.8.3",
        "micromodal": "^0.4.6",
        "modernizr": "^3.11.0",
        "nodelist-foreach-polyfill": "^1.2.0",

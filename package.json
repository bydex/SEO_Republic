        "slider-before-after": "^1.0.0",
        "smart-grid": "^2.1.2",
        "tippy.js": "^6.2.2",
        "vanilla-masker": "^1.2.0",
        "vanilla-text-mask": "^5.1.1",
        "wowjs": "^1.1.3",
        "zurb-twentytwenty": "^0.1.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "!(_*).scss": [
            "stylelint --fix --color --config ./.stylelintrc"
        ],
        "*.js": [
            "eslint --fix --color"
        ]
    }
}
